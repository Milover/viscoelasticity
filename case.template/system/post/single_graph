single_graph.axial
{
	type			sets;
	libs			( "libsampling.so" );
	writeControl	onEnd;
	//writeInterval   $short_write;
	setFormat		csv;

	interpolationScheme	cellPoint;

	fields			( p pBar );

	sets
	(
		axis
		{
			type	face;
			axis	x;
			start	#eval{vector( -$:b - $:L, 1e-9*$:R, 0 )};
			end		#eval{vector(  $:b + $:L, 1e-9*$:R, 0 )};
		}
	);
}

single_graph.radial
{
	type			sets;
	libs			( "libsampling.so" );
	writeControl	onEnd;
	//writeInterval   $short_write;
	setFormat		csv;

	interpolationScheme	cellPoint;

	fields			( U UBar );

	sets
	(
		axis
		{
			type	midPoint;
			axis	y;
			start	( 0 0 0 );
			end		#eval{vector( 0, $:R - $:a, 0 )};
		}
	);
}

