convergence.solver_info
{
	type			solverInfo;
	libs			("libutilityFunctionObjects.so");
	writeControl	timeStep;
	writeInterval	$short_write;
	log				false;
	writeResidualFields	false;

#ifeq $rheo_model multiMode
	fields			( p U "tau.*" );
#else
	fields			( p U );
#endif
}

