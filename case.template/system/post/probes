probes
{
	type			probes;
	libs			("libsampling.so");
	writeControl	timeStep;
	writeInterval	$short_write;
	log				false;

	fixedLocations	true;
	interpolation	cellPointFace;

	fields			( p pBar );

	probeLocations
	(
		( #eval{ -16*$:R } 0 0)
		( #eval{  16*$:R } 0 0)
	);
}

