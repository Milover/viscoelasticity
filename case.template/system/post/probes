_probes
{
	type			probes;
	libs			("libsampling.so");
	log				false;

	fixedLocations	true;
	interpolation	cellPoint;

	fields			( p pBar );

	probeLocations
	(
		( #eval{ -16*$:R } 0 0)
		( #eval{  16*$:R } 0 0)
	);
}

// * * * * * * * * * * * * * * * * Sampling  * * * * * * * * * * * * * * * * //

convergence.probes
{
	${_probes}

	writeControl	timeStep;
	writeInterval	$short_write;
}

probes
{
	${_probes}

	writeControl	onEnd;
}

// * * * * * * * * * * * * * * * * Cleanup * * * * * * * * * * * * * * * * * //

#remove "_.*"

