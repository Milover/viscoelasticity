FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include		"<constant>/caseSetup"

dimensions		[0 1 -1 0 0 0 0];

internalField	uniform $u_avg;

boundaryField
{
	inlet
	{
		type		fixedValue;
		value		$internalField;
	}

	outlet
	{
		type		zeroGradient;
	}

	"wall.*"
	{
		type		noSlip;
	}

	#include		"genericBCs"

}

