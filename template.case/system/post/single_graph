single_graph.axial
{
	type			sets;
	libs			( "libsampling.so" );
	writeControl	timeStep;
	writeInterval	$short_write;
	setFormat		csv;

	interpolationScheme	cellPatchConstrained;

	fields			( p pBar );

	sets
	(
		axis
		{
			type	face;
			axis	x;
			start	( #eval{ -$:b - $:L } 0 0 );
			end		( #eval{  $:b + $:L } 0 0 );
		}
	);
}

single_graph.radial
{
	type			sets;
	libs			( "libsampling.so" );
	writeControl	timeStep;
	writeInterval	$short_write;
	setFormat		csv;

	interpolationScheme	cell;

	fields			( U UBar );

	sets
	(
		axis
		{
			type	midPoint;
			axis	y;
			start	( 0 0   0 );
			end		( 0 $:a 0 );
		}
	);
}

